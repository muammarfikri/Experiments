<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:id="@+id/useravi" android:layout_width="100dp" android:layout_height="100dp"
               tools:srcCompat="@tools:sample/avatars"/>
    <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="@string/app_name" android:layout_gravity="center_vertical|center_horizontal"
              android:layout_marginStart="16dp"/>

</LinearLayout>